<link rel="stylesheet" href="css/tipo_cliente/cliente-type.css" />

{{> nav}}
<div id="perfil_container">
    <div id="content"> 
        <h3 id="title">USUARIO</h3>
        <img id="imagen" src="img/auth_user/perfil.png" alt="perfil">
        
        <div id="form-field">
            <label id="label_form"  for="first_name">NOMBRES</label>
            <input id="input-form" id="first_name" name="first_name" type="text" value="{{user.name}}">
        </div>
        <div id="form-field">
            <label id="label_form" for="last_name">APELLIDOS</label>
            <input id="input-form" id="last_name" type="last_name" name="last_name" value="{{user.lastName}}">
        </div>
        <div id="form-field">
            <label id="label_form" for="mail">E-MAIL</label>
            <input id="input-form" id="mail" type="mail" name="mail" value="{{user.mail}}">
        </div>
        <div id="form-field">
            <label id="label_form" for="cellphone">CELULAR</label>
            <input id="input-form" id="cellphone" type="cellphone" name="cellphone" value="{{user.cellphone}}">
        </div>
        <div id="form-field">
            <label id="label_form" for="userName">USER NAME</label>
            <input id="input-form" id="userName" type="text" name="userName" value="{{user.userName}}">
        </div>
        <div id="form-field">
            <label id="label_form" for="typeUser">TIPO DE USUARIO</label>
            <input id="input-form" id="typeUser" type="typeUser" name="typeUser" value="{{user.typeUser}}">
        </div>

    </div>
</div>