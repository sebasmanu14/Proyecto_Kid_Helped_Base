<link rel="stylesheet" href="/css/active/actividad.css">
<form action="/actividad/listar/{{user.id_usuario}}" method="get"></form>
<div id="container">
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <div id="id_actividad">
                <p>{{nombreActividad}}</p>
            </div>
            <div id="codigo">
                <p>{{descripcion}}</p>
            </div>
            <div id="img">
                <p>{{urlActividad}}</p>
            </div>
            <div id="boton">
                <div id="editar">
                    <a href="/actividad/editar/{{id_actividad}}"><button type="button">Editar</button></a>
                </div>

                <div id="eliminar">
                    <a href="/actividad/eliminar/{{id_actividad}}"><button type="button">Eliminar</button></a>
                </div>
            </div>
        </div>
        {{/each }}
    </div>
</div>