<link rel="stylesheet" href="/css/capacitacion/listarcapa.css">
<form action="/usuario/listar/{{user.id_usuario}}" method="get"></form>
<div id="container">
    <div class="row">
        {{#each lista}}
        <div id="tarjeta">
            <div id="id_capacitacion">
                <p>{{nombres}}</p>
            </div>
            <div id="codigo">
                <p>{{descripcion}}</p>
            </div>
            <div id="boton">
                <div id="editar">
                    <a href="/usuario/editar/{{id_capacitacion}}" ><button type="button">Editar</button></a> 
                </div>
                <div id="eliminar">
                    <a href="/usuario/eliminar/{{id_capacitacion}}" ><button type="button">Eliminar</button></a> 
                </div>
            </div>
        </div>
        {{/each }}
    </div>
</div>