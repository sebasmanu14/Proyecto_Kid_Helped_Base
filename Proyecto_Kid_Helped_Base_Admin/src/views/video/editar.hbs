<link rel="stylesheet" href="/css/video/editar.css">
<div id="contenedor">
    {{#each lista}}
    <form action="/video/editar/{{id_video}}" method="post">
    <div id="titulo">
        <p>Agregar Video</p>
    </div>
    <div id="url">
        <label>Url:</label>
        <input type="text" name="url" value="{{url}}" required placeholder="ingrese ">
    </div>
    <div id="descripcion">
        <label>Descripcion del Video:</label>
        <input type="text" name="descripcion" value="{{descripcion}}" required placeholder="ingrese ">
    </div>

    <div id="titulo">
        <label>Titulo Video:</label>
        <input type="text" name="titulo" value="{{titulo}}" required  placeholder="ingrese ">
    </div>

    <div id="tipo">
        <label>Tipo Video:</label>
        <input type="text" name="tipo" value="{{tipo}}" required placeholder="ingrese ">
    </div>

    <div id="boton">
        <button type="submit">Actualizar</button>
    </div>
    </form>
    {{/each}}
</div>