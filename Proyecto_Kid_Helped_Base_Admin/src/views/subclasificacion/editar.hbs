<link rel="stylesheet" href="/css/video/editar.css">
<div id="contenedor">
    {{#each lista}}
    <form action="/subclasificacion/editar/{{id_subclasificacion}}" method="post">
    <div id="titulo">
        <p>Actualizar Subclasificacion</p>
    </div>
    <div id="nombre">
        <label>Nombre de la Subclasificacion:</label>
        <input type="text" name="nombre" required  placeholder=" ingrese">
    </div>
    <div id="detalle">
        <label>Descripcion de la Subclasificacion:</label>
        <input type="text" name="detalle" required placeholder=" ingrese">
    </div>

    <div id="boton">
        <button type="submit">Actualizar</button>
    </div>
    </form>
    {{/each}}
</div>