<link rel="stylesheet" href="/css/video/editar.css"><!--/css/capacitacion/editarcapa.css-->

<!-- agregar - editar - boton -->

   <div id="container">
        {{#each lista}}

            <form action="/tipoCapacitacion/editar/{{id_tipoCapacitacion}}" method="post">

                <div id="titulo">
                    <h3 >Actualizar Capacitación</h3>
                </div>

                <div id="nombre">
                    <label >Nombre de la capacitacion:</label>
                    <input type="text" name="nombre"  value="{{nombre}}" required placeholder="Nombre de la capacitación." />
                </div>

                <div id="estado">
                    <label >estado:</label>
                    <input type="text" name="estado" value="{{estado}}" required placeholder="ingrese la debida descripción." />
                </div>
                <!-- boton de actualizar -->
                <div id="boton">
                    <button type="submit">Actualizar</button>
                </div>
            </form>
        {{/each }}
    </div>