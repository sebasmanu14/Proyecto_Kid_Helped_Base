<link rel="stylesheet" href="/css/video/editar.css">
<div id="contenedor">

    {{#each lista}}
    <form action="/respuestaComentario/editar/{{id_respuestaComentario}}" method="post">
        <div id="titulo">
            <h2>Editar la respuesta del comentario</h2>
        </div>
        <div id="respuesta">
            <label>Edita la respuesta del comentario:</label>
            <input type="text" name="respuesta" value="{{respuesta}}" required>
        </div>

        <div id="boton">
            <button type="submit">Actualizar</button>
        </div>
    </form>
    {{/each}}
</div>